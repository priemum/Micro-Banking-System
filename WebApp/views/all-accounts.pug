extends base

block content 
  main.main 
    // To store card containing details about accounts of the user
    h2.heading-secondary Savings Accounts
    if user
      .card-container 
        each account in accounts
          .card
            .card__header
              .card__picture
                .card__picture-overlay &nbsp;
                img.card__picture-img(src='img/account.jpg', alt='Account')
              h3.heading-tertirary
                span Account: #{account.accountNumber}

            .card__details
              h4.card__sub-heading Your Account Summary
              .card__data
                span Balance : #{account.accountBalance}
              .card__data
                span Account Type: #{account.accountType}

            .card__footer
              a.btn.btn--green.btn--small(href=`report?accNo=${account.accountNumber}`) Transaction Report

      
    else  
      a.nav__el(href="/login") LogIn 
      a.nav__el(href='/signup') SignUp  